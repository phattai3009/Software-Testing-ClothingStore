@{
    ViewBag.Title = "QuanLySanPham";
    Layout = "~/Views/Shared/_LayoutPageHome2.cshtml";
}
@using WebsiteShopQuanAo.Models;
@model List<SANPHAM>
<style>
    #divNavigation {
        display: none;
    }
</style>

<div class="width-details">
    <div class="container text-center mt-4">
        <h2 class="mb-3 fw-normal" style="text-align:center">Quản Lý Sản Phẩm</h2>
         <table class="table" style="width:100%; margin:auto; border:hidden">
                <tr style="border-bottom:1px solid black" >
                    <th>MÃ HÀNG</th>
                    <th>TÊN HÀNG</th>
                    <th>GIÁ</th>
                    <th>HÌNH</th>
                    <th>MÃ LOẠI</th>
                    <th colspan="3">CHỨC NĂNG</th>
                    
                </tr>

                @foreach (var item in Model)
                {
                    <tr>
                        @using (Html.BeginForm("CapNhatGiaSanPham", "SanPham", new { @mahang = item.MASP }))
                        {
                        <td width="10%">@item.MASP</td>
                        <td width="25%">@item.TENSP</td>
                        <td width="10%"><input type="number" name="txtGia" value="@item.DONGIA" style="padding-left:10px;" /></td>
                        <td width="40%"><img src="/Images/@item.HINHANH" width="150px" /></td>
                        <td width="15%">@item.MALSP</td>
                            <td><input type="submit" value="Update" class="btn btn-primary" /></td>
                            <td>@Html.ActionLink("Details", "XemChiTietKho", new { @mahang = item.MASP })</td>
                            <td>@Html.ActionLink("Add", "ThemVaoKho", new { @msp =  item.MASP})</td>
                    
                        }
                    </tr>
                }
         </table>
    </div>
</div>